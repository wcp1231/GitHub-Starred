doctype html
html(ng-app="gitStars")
  head
    meta(charset="utf-8")
    title gitStars
    // inject:vendor:css
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.css">
    // endinject
    // inject:css
    <link rel="stylesheet" href="/css/app.css">
    // endinject
  body(ng-controller="rootCtrl")
    .row
      .col-md-2.aside
        .vcard
          a.vcard-avatar(href="#")
            img.img-rounded(src="{{ user.avatar }}", height="230", width="230")
          h1.vcard-names
            span.vcard-fullname {{ user.fullname }}
            span.vcard-username {{ user.username }}
      .col-md-3.middle
        .sort-bar
        ul.repo-list
          li.repo.source(ng-repeat="repo in repos")
            span.mega-octicon.octicon-repo
            h3
              a(href="{{ repo.html_url }}") {{ repo.full_name }}
            span.sort-info
              = " Starred "
              time xxxxx?
            p.description {{ repo.description }}
      .col-md-7.main
        = "{{repo}}"
    // inject:vendor:js
    <script src="/angular/angular.js"></script>
    <script src="/angular-route/angular-route.js"></script>
    <script src="/angular-resource/angular-resource.js"></script>
    <script src="/jquery/dist/jquery.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.js"></script>
    // endinject
    // inject:js
    <script src="/gitStars-templates.js"></script>
    <script src="/src/app/service.js"></script>
    <script src="/src/app/controllers/rootCtrl.js"></script>
    <script src="/src/app/app.js"></script>
    <script src="/src/app/route.js"></script>
    // endinject
