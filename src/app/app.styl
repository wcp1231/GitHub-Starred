@import "styles/_base";

font-color = #999999
small-font-color = font-color - 25%
bar-height = 50px
bgcolor = #2f2f2f

.row {
  height 100%
  margin 0

  .aside, .middle, .main {
    padding 0
    height 100%
    overflow-y scroll
  }

  .aside {
    background: bgcolor
    color font-color

    .vcard {
      .vcard-avatar img {
        display block
        margin 0 auto
        margin-top 20px
      }

      .vcard-names {
        margin-top 10px
        padding 0 15px
        .vcard-fullname, .vcard-username {
          display block
        }
        .vcard-fullname {
          font-size 15px
          line-height 22px
        }
        .vcard-username {
          font-size 10px
          line-height 22px
          color small-font-color
        }
      }
    }

    .filterlist {
      font-size 15px
      border none

      .panel-heading {
        background #2f2f2f
        color #ddd
      }

      .list-group {
        height 200px
        font-size 11px
        overflow-y scroll
        .list-group-item {
          background #2f2f2f
          border none
          padding 5px 15px
          &.active {
            background #5f5f5f
          }
          .badge {
            padding 2px 5px
          }
        }
      }
    }

    .list-group.operation {
      margin 0
      position absolute
      bottom 0
      width 100%

      .list-group-item {
        background bgcolor
        color font-color
        font-size 15px
        border none
        &:hover {
          color gainsboro
        }
      }
    }
  }

  .middle {
    padding-top 50px
    border-right 1px solid #d9d9d9

    .sort-bar {
      position fixed
      top 0
      height bar-height
      width inherit
      background #c9c9c9
      padding 8px
      border-bottom 3px solid #d9d9d9

      input.seach {
        border none
        color #99999
      }
    }

    .repo-list {
      padding 0
      font-size 13px

      .repo {
        list-style-type none
        border-bottom 1px solid #d9d9d9
        padding 15px
        &.active {
          background #f5f5f5
          box-shadow inset 0 0 10px #ccc
        }

        h3 {
          margin 0
          display inline-block

          small a {
            color #999
          }
        }
        .sort-info {
          display inline-block
          font-size 11px
          color font-color
        }
      }
    }
  }

  .main {
    padding 10px
  }
}