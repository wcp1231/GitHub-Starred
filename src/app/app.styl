@import "styles/_base";

font-color = #999999
small-font-color = font-color - 25%

.row {
  height 100%
  margin 0

  .aside, .middle, .main {
    padding 0
    height 100%
    overflow-y scroll
  }

  .aside {
    background: #2f2f2f
    color font-color

    .vcard {
      .vcard-avatar img {
        display block
        margin 0 auto
        margin-top 20px
      }

      .vcard-names {
        margin-top 10px
        padding 0 15px
        .vcard-fullname, .vcard-username {
          display block
        }
        .vcard-fullname {
          font-size 15px
          line-height 22px
        }
        .vcard-username {
          font-size 10px
          line-height 22px
          color small-font-color
        }
      }
    }

    .list-group {
      margin 0
      position absolute
      bottom 0
      width 100%

      .list-group-item {
        background #2f2f2f
        color font-color
        font-size 15px
        border none
        &:hover {
          color gainsboro
        }
      }
    }
  }

  .middle {
    padding-top 50px
    border-right 1px solid #d9d9d9

    .sort-bar {
      position fixed
      top 0
      height 50px
      width 25%
      background #2f2f2f
      padding 8px

      input.seach {
        background rgba(255,255,255,0.1)
        border none
        color #999
      }
    }

    .repo-list {
      padding 0
      font-size 13px

      .repo {
        list-style-type none
        border-bottom 1px solid #d9d9d9
        padding 15px
        &:hover {
          background #fcfce2
          box-shadow inset 0 0 10px #ccc
        }

        h3 {
          margin 0
          display inline-block
        }
        .sort-info {
          display inline-block
          font-size 11px
          color #999
        }
      }
    }
  }

  .main {
  }
}